<h1>Edit host</h1>

<%= form_for(@host) do |f| %>
    <%= render 'shared/error_messages', :object => f.object %>
    <div class="field">
        <%= f.label :first_name %>
        </br>
        <%= f.text_field :first_name%>
    </div>
    <div class="field">
        <%= f.label :last_name %>
        </br>
        <%= f.text_field :last_name%>
    </div>
    <div class="field">
        <%= f.label :username %>
        </br>
        <%= f.text_field :username%>
    </div>
    <div class="field">
        <%= f.label :email %>
        </br>
        <%= f.text_field :email%>
    </div>
    <div class="field">
        <%= f.label :password %>
        </br>
        <%= f.text_field :password%>
    </div>
    <div class="field">
        <%= f.label :password_confirmation, "Confirmation" %>
        </br>
        <%= f.text_field :password_confirmation%>
    </div>
    <div class = "actions">
        <%= f.submit "Update" %>
    </div>
<% end %>

